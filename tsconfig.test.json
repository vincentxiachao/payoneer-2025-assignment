{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "isolatedModules": true
    },
    "include": ["**/*.test.ts", "**/*.test.tsx"],
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@features/*": ["src/features/*"]
    }
}